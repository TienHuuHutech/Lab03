@model Lab03.Models.Book

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-danger">Delete</h1>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Are you sure you want to delete this book?</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">Book Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 fw-bold">Author</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

                <dt class="col-sm-3 fw-bold">Publish Year</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PublishYear)</dd>

                <dt class="col-sm-3 fw-bold">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3 fw-bold">Cover</dt>
                <dd class="col-sm-9">
                    <img src="/@Model.Cover" alt="Book Cover" class="img-thumbnail" style="width: 100px; height: auto;" />
                </dd>

                <dt class="col-sm-3 fw-bold">Category</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <!-- Form to delete the book -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </form>
        </div>
    </div>
</div>
