@model Lab03.Models.Book

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4 text-center text-primary">Add New Book</h1>

<h4 class="text-muted">Enter book details below:</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Add" method="post" class="bg-light p-4 border rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Tiêu đề -->
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Book Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Tác giả -->
            <div class="form-group mb-3">
                <label asp-for="Author" class="form-label">Author</label>
                <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <!-- Năm xuất bản -->
            <div class="form-group mb-3">
                <label asp-for="PublishYear" class="form-label">Publish Year</label>
                <input asp-for="PublishYear" class="form-control" placeholder="Enter publish year" />
                <span asp-validation-for="PublishYear" class="text-danger"></span>
            </div>

            <!-- Giá -->
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Bìa sách -->
            <div class="form-group mb-3">
                <label asp-for="Cover" class="form-label">Cover Image URL</label>
                <input asp-for="Cover" class="form-control" placeholder="Enter cover image URL" />
                <span asp-validation-for="Cover" class="text-danger"></span>
            </div>

            <!-- Danh mục -->
            <div class="form-group mb-3">
                <label asp-for="CategoryID" class="form-label">Category</label>
                <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.Categories">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>

            <!-- Mô tả sách -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter book description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Nút submit -->
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a class="btn btn-secondary btn-sm" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
