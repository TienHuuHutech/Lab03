@model IEnumerable<Lab03.Models.Book>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Index</h1>

<style>
    .book-card {
        border: 1px solid #008cba;
        border-radius: 5px;
        margin-bottom: 20px;
        padding: 10px;
        height: 100%;
    }

    .book-cover {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 5px;
    }

    .card-body p {
        margin-bottom: 0.5rem;
        word-wrap: break-word;
    }
</style>

<div class="row pd-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4 d-flex">
            <div class="col-12 book-card d-flex flex-column justify-content-between">
                <div class="card">
                    <img src="@item.Cover" class="book-cover" />
                    <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@item.Title</p>
                            <p class="card-title text-secondary">@item.Author</p>
                        </div>
                        <div class="pl-1">
                            <p>Price: <strike>@item.Price.ToString("0.00")</strike></p>
                        </div>
                    </div>
                </div>
                <div class="mt-2">
                    <a asp-controller="Home" asp-action="Detail" class="btn btn-primary form-control" asp-route-id="@item.ID">Detail</a>
                </div>
            </div>
        </div>
    }
</div>
